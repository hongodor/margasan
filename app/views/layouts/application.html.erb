<!DOCTYPE html>
<html>
  <head>
    <title>Margasan</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do|message_type, message| %>
          <div class="alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
