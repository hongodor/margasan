<p>
Username: <%= @user.username %> <br>
Registered at: <%= @user.created_at.strftime("%Y %m %d") %>
</p>
<h1>Projects</h1>
  <% @user.projects.each do |project| %>
    <%= link_to project.name, project %>
  <% end %>
<h1>Last options</h1>
<ul>
  <% @user.options.each do |option| %>
    <li><%= option.content %> - <%= option.updated_at %></li>
  <% end %>
</ul>